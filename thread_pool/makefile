###################################################
# Source file block definition                    #
###################################################
SRC = main.c thread_pool.c
###################################################
# Object file definition                          #
###################################################
OBJ = $(SRC:.c=.o)
###################################################
# Output execution file definition                #
###################################################
PROGRAM = tpool_test
###################################################
# Compiler definition                             #
###################################################
CC = gcc
###################################################
# Include definition                              #
###################################################
INC =
###################################################
# Linker Parameter definition                     #
###################################################
LINK = -lpthread
###################################################
# Options for development definition              #
###################################################
CFLAGS = -ansi -g -Wall
# -ansi 支持符合ANSI标准的C程序。这样就会关闭GNU C中某些不兼容ANSI C的特性。
# -std=c89 指明使用 ISO CXX 作为标准来编译程序。
# -std=iso9899:1999
# -std=gnu99 
###################################################
# Options for release definition                  #
###################################################
# CFLAGS = -ansi -O -Wall

all: $(PROGRAM)

$(PROGRAM): $(OBJ)
	$(CC) -o $(PROGRAM) $(OBJ) $(LINK)

.SUFFIXES: .c

.c.o:
	$(CC) $(INC) $(CFLAGS) -c $<
clean:
	rm -f *.o $(PROGRAM)

